{
  "compilerOptions": {
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "checkJs": false,
    "jsx": "react",
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@pages/*": ["./src/pages/*"],
      "@common/*": ["./src/common/*"],
      "@router": ["./src/router"],
      "@routes": ["./src/routes"],
      "@utils/*": ["./src/utils/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@assets/*": ["./src/assets/*"],
      "@locales/*": ["./src/locales/*"],
      "@services/*": ["./src/services/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}